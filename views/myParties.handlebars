<div id="homePage">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h2>Unwrapped - This is my parties Page!</h2>

        <div id="test"></div>

        <table class="table text-center align-middle">
          <thead>
            <tr>
              <th scope="col">Party Name</th>
              <th scope="col">Occasion</th>
              <th scope="col">Location</th>
              <th scope="col">Date</th>
              <th scope="col">Time</th>
              <th scope="col">Party Code</th>
              <th scope="col">Update</th>
              <th scope="col">Delete</th>
            </tr>
          </thead>
          <tbody id="saved">
            </tr>
          </tbody>
        </table>    

      </div>
      <div class="updateParty">
        <form id="updateForm">
            <div class="form-group">
              <label>Party Name</label>
              <input type="name" class="form-control" id="partyName1">
            </div>

            <div class="form-group">
              <label>Party Location</label>
              <input type="text" class="form-control" id="partyLocation1">
            </div>

            <div class="form-group">
              <label>Party Type</label>
              <select class="form-control" id="partyType1">
                <option selected>Choose...</option>
                <option value="bridal">Bridal</option>
                <option value="wedding">Wedding</option>
                <option value="baby">Baby</option>
                <option value="birthday">Birthday</option>
              </select>
            </div>

            <div class="form-group">
              <label>Party Date</label>
              <small></small>
              <input type="date" class="form-control" id="partyDate1" placeholder="MM/DD/YYYY">
            </div>


            <div class="form-group">
                <input type="time" id="partyTime1" name="appt" min="00:00" max="23:59">
            </div>

            <button type="submit" class="btn btn-primary" id="updateSubmit">Submit</button>
          </form>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/myParties.js"></script>
