<div id="guestRegister">
    <div class="container">
        <div class="row">
            <div class="col-8 offset-2">
                <h2>This is our Guest Register Page.</h2>

                <form>
                    <div class="form-group">
                        <label>Guest Name</label>
                        <input type="name" class="form-control" id="guestName">
                    </div>
                    <div class="form-group">
                        <label>Address</label>
                        <input type="text" class="form-control" id="guestAddress">
                    </div>
                    <div class="form-group">
                        <label>Email Address</label>
                        <input type="email" class="form-control" id="guestEmail">
                    </div>
                    <button type="submit" class="btn btn-primary" id="createGuest">Submit</button>
                </form>
            </div>
        </div>
    </div>
</div>